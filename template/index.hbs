        <script>
      
      let cookies = document.cookie;
      let loggedIn = cookies.includes("user=");
      if(loggedIn){
        let user = cookies.split("; user=").pop().split(';')[0];
        document.getElementById("login").remove();
        const username = document.createElement("li");
        username.innerText = user
        document.getElementById("list").appendChild(username);

        function logout(){
          console.log("Logout call inited");
          fetch("/logout", {
            method: "POST",
            headers: {
              "Content-Type": "application/json"
            }
          }).then((res)=>console.log(res));
          window.location.replace("/");
        }
         const logoutbtn = document.createElement("button");
         logoutbtn.innerText = "Logout";
         logoutbtn.style.padding='5px'
         logoutbtn.style.marginLeft='10px'
         logoutbtn.addEventListener('click', logout);
         document.getElementById("list").appendChild(logoutbtn);
      }  
    </script>
